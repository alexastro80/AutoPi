[Unit]
Description=Start Auto application


[Service]
Environment=DISPLAY=:0
Environment=XAUTHORITY=/home/pi/.Xauthority
ExecStart=/bin/bash -c '/home/pi/AutoPi/runAuto.sh > /home/pi/autoPi.log 2>&1'
Restart=always
RestartSec=2s
KillMode=process
TimeoutSec=infinity

[Install]
WantedBy=graphical.target  